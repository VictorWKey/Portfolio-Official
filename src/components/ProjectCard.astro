---
const {title, desc, technologies, img} = Astro.props;
---

<div class="flex flex-wrap border border-black">
  <figure class="w-72 border h-52 border-black rounded-lg">
    <img src={img} alt="">
  </figure>
  <div class="flex flex-col justify-between p-4 w-96 ">
    <div class="flex flex-col">
      <h1 class="font-bold text-2xl text-black">{title}</h1>
      <p class="ttext-pretty text-black">{desc}</p>
      <!-- Tecnologias usadas -->
      <div class="flex gap-4">
        {technologies.map((technologie: string) =>(
          <p>{technologie}</p>
        ))}
      </div>
    </div>
    <div class="flex gap-2">
      <button class="py-2 px-4 sm:px-6 bg-primary text-white rounded-lg text-xs sm:text-md font-bold transform transition-transform hover:scale-110">Repositorio</button>
      <button class="py-2 px-4 sm:px-6 bg-primary text-white rounded-lg text-xs sm:text-md font-bold transform transition-transform hover:scale-110">Ver sitio web</button>
    </div>
  </div>
</div>